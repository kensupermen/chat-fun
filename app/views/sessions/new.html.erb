<div class="container" style="margin-top:100px">

  <h1>Login</h1>
  <%= form_tag sessions_path, method: 'post' do %>
    <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: "Email"  %>
    <%= password_field_tag :password, nil,  class: 'form-control', placeholder: "Enter password"  %>

    <br>
    <%= submit_tag "Log In", data:{disable_with: "Signing in..."}, class: 'btn btn-primary' %>
  <% end %>
</div>
