<div class="container" style="margin-top:100px">
  
  <% if @friend_lists.count > 0 %>
  <%= simple_form_for @message do |f|  %>
    <%= f.input :recipient, label: 'Friend', collection: @friend_lists.map{|friend| [friend.user.name, friend.user.id] }, as: :select, include_blank: false %>
    <br>
    <div class="panel-footer clearfix">
      <%= f.input :body, as: :text, class: "form-control", input_html: {rows: 10} %>
      <span class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-12" style="margin-top: 10px">
        <%= f.submit "Send", class: "btn btn-warning btn-lg btn-block" %>
      </span>
    </div>
  <% end %>
<% elsif %>
  <h2>You don't have friend. Please find friend </h2>
<% end %>
</div> 
