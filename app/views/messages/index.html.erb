<div class="container" style="margin-top: 100px">
<h1>Inbox</h1>

<table class="table table-hover">
  <thead class="thead thead-default">
    <tr>
      <td>Sender</td>
      <td>Subject</td>
    </tr>
  </thead>
  <tbody>
  <% @messages.each do |message|  %>
    <tr>
      <% if message.read_at? %>
      <td><%= message.sender %></td>
      <td><%= message.body %></td>
    <% else %>
      <td><b><%= link_to message.sender, message_path(message.id) %></b></td>
      <td><b><%= link_to message.body, message_path(message.id) %></b></td>

    <% end%>
    </tr>
  <% end %>
  </tbody>
</table>

</div>
