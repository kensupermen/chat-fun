<h1>Inbox</h1>


<table class="table table-hover">
  <thead class="thead thead-default">
    <tr>
      <td>Sender</td>
      <td>Subject</td>
    </tr>
  </thead>
  <tbody>
  <% @messages.each do |message|  %>
    <tr>
      <% if message.read_at? %>
      <td><%= message.sender %></td>
      <td><%= message.body %></td>
    <% else %>
      <td><b><%= message.sender %></b></td>
      <td><b><%= message.body %></b></td>

    <% end%>
    </tr>
  <% end %>
  </tbody>
</table>

