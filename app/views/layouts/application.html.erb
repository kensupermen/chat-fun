<!DOCTYPE html>
<html>
  <head>
    <title>Chat Fun</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="/">Chat Fun</a>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
         </ul>
    <form class="form-inline my-2 my-lg-0">
<% if current_user %>
  <div class="alert alert-info">
  <%= link_to "Sent messages", sent_messages_path %>
  <%= link_to "New message", new_message_path %>
  <%= link_to "Find friends", users_path %>
  <%= link_to "Log out", logout_path, method: 'delete' %>
  </div>
<% else %>
  <%= link_to "Log in", new_session_path, class: 'btn btn-outline-success my-2 my-sm-0' %>
<% end %>

    </form>
  </div>
</nav>

    <div class="container">


<%= flash_messages %>

      <%= yield %>
    </div>
  </body>
</html>
