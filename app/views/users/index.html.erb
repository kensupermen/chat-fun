<h1>Find friends</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
    <th></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= link_to "Add friend", root_path, class: 'btn btn-primary' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
